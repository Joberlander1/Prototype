<!DOCTYPE html > 
<html ng-app>
<%include header3%>
<%include navbar1%>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1></h1>
    </div>
    <div class="col-sm-12">
      <form class="form" name="form" ng-submit="vm.login(form)" novalidate>

        <div class="form-group">
          <label>Username</label>

          <input type="email" name="username" class="form-control" ng-model="vm.user.email" required>
        </div>

        <div class="form-group">
          <label>Password</label>

          <input type="password" name="password" class="form-control" ng-model="vm.user.password" required>
        </div>

        <div class="form-group has-error">
          <p class="help-block" ng-show="form.email.$error.required && form.password.$error.required && vm.submitted">
             Please enter your email and password.
          </p>
          <p class="help-block" ng-show="form.email.$error.email && vm.submitted">
             Please enter a valid email.
          </p>

          <p class="help-block">{{ vm.errors.other }}</p>
        </div>

        <div>
          <span style="padding-left:870px"><a href="/about"><button type="submit" ng-disabled="form.$error.email"class="btn btn-primary btn-lg">Login</button></a></span>
        </div>

      </form>
    </div>
  </div>
  <hr>
</div>
